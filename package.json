{
  "name": "bizarre",
  "version": "0.0.4",
  "description": "bizarre package",
  "main": "lib/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "jest --verbose",
    "build": "npm run build:lib && npm run build:bundle",
    "build:lib": "tsc -d ./src/index.ts --outDir lib",
    "build:bundle": "webpack",
    "start": "jest --watch --collectCoverage=false",
    "start:dev": "webpack-dev-server",
    "docs:dev": "vuepress dev docs-src",
    "docs:build": "vuepress build docs-src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KawayAlpaka/bizarre.git"
  },
  "author": "KawayAlpaka",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/KawayAlpaka/bizarre/issues"
  },
  "homepage": "https://github.com/KawayAlpaka/bizarre#readme",
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "jest": "^24.8.0",
    "ts-jest": "^24.0.2",
    "ts-loader": "^9.4.2",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^3.4.1",
    "vuepress": "^0.14.11"
  },
  "files": [
    "dist",
    "lib"
  ],
  "jest": {
    "rootDir": "",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
